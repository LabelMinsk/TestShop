<form action="/add" method='POST'>
    <div class="input-field">
        <input placeholder="Enter title" name='title' id="title" type="text" class="validate" required>
        <label for="title">Title tour</label>
        <span class="helper-text" data-error="Enter title"></span>
    </div>
    <div class="input-field">
        <input placeholder="Enter price" name='price' id="price" type="number" class="validate" required min='1'>
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>
    <div class="input-field">
        <input placeholder="Enter URL" name='img' id="img" type="text" class="validate" required>
        <label for="img">URL Image</label>
        <span class="helper-text" data-error="Enter URL"></span>
    </div>
    
   <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class='btn'>Add tour</button>
</form>