<h1>Edit Tour {{tour.title}}</h1>
<form action="/tours/edit" method='POST' class="tours-form">
    <div class="input-field">
        <input placeholder="Enter title" name='title' id="title" type="text" class="validate" required
            value="{{tour.title}}">
        <label for="title">Title tour</label>
        <span class="helper-text" data-error="Enter title"></span>
    </div>
    <div class="input-field">
        <input placeholder="Enter price" name='price' id="price" type="number" class="validate" required min='1'
            value="{{tour.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>
    <div class="input-field">
        <input placeholder="Enter URL" name='img' id="img" type="text" class="validate" required value="{{tour.img}}">
        <label for="img">URL Image</label>
        <span class="helper-text" data-error="Enter URL"></span>
    </div>
    <input type="hidden" name="id" value ="{{tour.id}}"> 
    
    <button type="submit" class='btn'>Edit tour</button>
</form>

<form action="/tours/remove" method="POST">
    <input type="hidden" name="id" value="{{tour.id}}">
    <button type="submit" class="btn red">Delete tour</button>
</form>