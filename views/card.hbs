<h1>Card</h1>
<div id="card">
    {{#if tours.length}}
    <table>
        <thead>
            <tr>
                <th>Tour</th>
                <th>Quantity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each tours}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Price:</strong> <span class="price">{{price}}</span></p>
    <form action="/orders" method="POST">
    <button type="submit" class="btn">Order</button>
    </form>
    {{else}}

    {{/if}}

</div>