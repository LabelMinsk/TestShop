<div class="auth">

    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">LogIn</a></li>
                <li class="tab col s6"><a href="#register">SignIn</a>
                </li> 
            </ul> 
        </div> 
        
        <!--LogIn  -->
        <div id="login" class="col s6 offset-s3">
            <h3>Authentication</h3>
            <form action="/auth/login" method='POST'>
                <div class="input-field">
                    <input name='email' id="email" type="text" class="validate"
                        required>
                    <label for="email">Enter email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>
                <div class="input-field">
                    <input name='password' id="password" type="password" class="validate"
                        required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>
                <button class='btn' type="submit">LogIn</button>
            </form>
        </div>

        <!--SignIn  -->
        <div id="register" class="col s6 offset-s3">
            <h3>Create account</h3>
            <form action="/auth/register" method='POST'>
                <div class="input-field">
                    <input name='email' id="remail" type="text" class="validate"
                        required>
                    <label for="remail">Enter email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>
                <div class="input-field">
                    <input name='password' id="rpassword" type="password" class="validate"
                        required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>
                <div class="input-field">
                    <input name='password' id="confirm" type="password" class="validate"
                        required>
                    <label for="confirm">Confirm password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>
                <button class='btn' type="submit">SignIn</button>
            </form>
        </div>
    </div>
</div>